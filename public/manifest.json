{
  "name": "GitHub Archiver",
  "description": "Chrome extension to archive your favorite pages on the web.",
  "version": "1.0",
  "manifest_version": 3,
  "homepage_url": "http://github.com/ommyjay/github-archiver",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup",
    "default_icon": "logo192.png"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["./static/js/content.js"]
  }],
  "background": {
    "service_worker": "./static/js/content.js"
  }
}